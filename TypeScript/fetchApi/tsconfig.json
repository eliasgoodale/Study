{
	"compilerOptions": {
		"lib": ["es2015", "dom"],
		"target": "es2015",
		"module": "commonjs",
		"declaration": false,
		"noImplicitAny": false,
		"sourceMap": true,
		"noLib": false,
		"suppressImplicitAnyIndexErrors": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"allowJs": false
	},
	"compileOnSave": false,
	"exclude": [
		"node_modules"
	]
}